{
  "manifest_version": 2,
  "name": "Wikipedia Search",
  "version": "1.0",

  "description": "Wiki API Test",
  
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html",
    "default_title": "Search Wikipedia"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "linux": "Ctrl+Shift+K",
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      }
    }
  },

  "content_scripts": [
    {
	  "matches": ["*://*/*"],
    "js": [
      "js/contentscript.js"
    ]
    }
  ]
}